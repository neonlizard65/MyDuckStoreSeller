<Window x:Class="MyDuckStoreSeller.Classes.FormProduct.AddEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyDuckStoreSeller.Classes.FormProduct"
        mc:Ignorable="d"
        Title="AddEditWindow" Height="670" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Text="Категория товара:" VerticalAlignment="Center" ></TextBlock>
            <ComboBox Name="CategoriesComboBox" Width="300" Height="32" Margin="5, 0, 0 ,0" SelectionChanged="CategoriesComboBox_SelectionChanged"></ComboBox>
        </StackPanel>
        <Frame Name="ProductFrame" Grid.Row="1" NavigationUIVisibility="Hidden"></Frame>
    </Grid>
</Window>
